<%- include("../partials/header") %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To Yelpcamp!</h1>
      <p>View our hand-picked campgrounds from all over the world!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="campgrounds/new"
          >Add New Campground</a
        >
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds</h3>
    </div>
  </div>
  <div class="row flex-wrap: wrap">
    <% campgrounds.forEach((campground) => { %>
    <div class="col-12 col-xl-3 col-sm-6 mr-1">
      <div class="thumbnail img-thumbnail">
        <img src="<%= campground.image %>" class="img-fluid" />
        <div class="caption">
          <h4><%= campground.name %></h4>
        </div>
        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary"
          >More Info</a
        >
      </div>
    </div>
    <% }); %>
  </div>
</div>

<%- include("../partials/footer") %>
